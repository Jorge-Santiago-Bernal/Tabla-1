#Este programa dibuja un triangulo de las dimensiones que le digamos
def triangulos():
  n_filas=int(input("¿De qué tamaño quieres el triangulo? (1-10)"))
  #Esto es un bucle anidado (nested)
  for filas in range(1,n_filas+1):
    for col in range(1,filas+1):
      print('* ',end='') 
    print("") # \n hace un salto de línea


triangulos()
