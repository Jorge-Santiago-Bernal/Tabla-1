#Este programa suma por un lado los numeros pares e impares
def suma_par_impar():
  suma_par=0 #Defino dos variables acumuladoras
  suma_impar=0
  numero=input("Â¿Hasta que numero deseas realizar la suma? ")
  for cont in range(1,int(numero)+1):
    if(cont%2==0):
      suma_par= suma_par+cont
    if(cont%2==1):
      suma_impar= suma_impar+cont
  print("la suma de los pares = " + str(suma_par))
  print("la suma de los impares= " + str(suma_impar))
suma_par_impar()
